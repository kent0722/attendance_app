<% provide(:title, "new") %>

<div class="row">
  <div class="col-md-6 col-md-offset-2">
    <h1>ログイン</h1>
    
    <%= form_with(scope: :session, url: login_path, local: true, method: :post) do |f| %>
      
      <%= f.label :email, "メールアドレス", class: "label-form" %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, "パスワード", class: "label-form" %>
      <%= f.password_field :password, class: "form-control" %>
      
      <%= f.label :remember_me, class: "checkbox inline checkbox-login", for: "remember-me" do %>
        <%= f.check_box :remember_me, id: "remember-me" %>
        <span>ログイン情報を記憶する</span>
      <% end %>
            
      <%= f.submit "Log in", class: "btn btn-primary btn-block", id: "login-btn" %>
      <p>アカウント作成は
        <%= link_to "こちら", new_user_path(@user), class: "login_new_create" %>から
      </p>
      
    <% end %>
  </div>
</div>