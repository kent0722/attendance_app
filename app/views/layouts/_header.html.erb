<header class="navbar fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "勤怠システム", "#", id: "header_logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <% if current_user.admin? %>
            <li><%= link_to "トップへ", root_path, class: "header_list" %></li>
            <li><%= link_to "ユーザ一覧", users_path(@user), class: "header_list" %></li>
            <li><%= link_to "基本情報の修正", edit_basic_info_user_path(current_user), class: "header_list" %></li>
            <li>
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" id: "dropdown_title">
                <%= current_user.name %> <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "設定", edit_user_path(current_user), class: "drop-list" %></li>
                <li><%= link_to "ログアウト", logout_path, class: "drop-list", method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "トップへ", root_path, class: "header_list" %></li>
            <li>
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" id: "dropdown_title">
                <%= current_user.name %> <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "ログアウト", logout_path, class: "drop-list", method: :delete %></li>
              </ul>
            </li>
          <% end %>
        <% else %>
          <li><%= link_to "ログイン", login_path, class: "header_list" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
