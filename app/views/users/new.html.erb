<% provide(:title, "new") %>

<div class="row">
  <div class="col-md-6 col-md-offset-2">
    <h1>アカウント作成</h1>
    
    <%= form_with(model: @user, url: users_path(@user), local: true, method: :post) do |f| %>
    
      <%= f.label :name, class: "label-form" %>
      <%= f.text_field :name, class: "form-control" %>
      
      <%= f.label :email, class: "label-form" %>
      <%= f.text_field :email, class: "form-control" %>
      
      <%= f.label :department, class: "label-form" %>
      <%= f.text_field :department, class: "form-control" %>
      
      <%= f.label :password, class: "label-form" %>
      <%= f.text_field :password, class: "form-control" %>
      
      <%= f.label :password_confirmation, class: "label-form" %>
      <%= f.text_field :password_confirmation, class: "form-control" %>
      
      <%= f.submit "作成", class: "btn btn-primary btn-block", id: "form_btn" %>
      
    <% end %>
  </div>
</div>