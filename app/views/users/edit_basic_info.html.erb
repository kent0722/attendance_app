<% provide(:title, "edit_basic_info") %>
<% provide(:button_text, '更新') %>

<div class="row">
  <div class="col-md-7 col-md-offset-2">
    <h1>基本情報の更新</h1>
    <%= form_with(model: @user, url: update_basic_info_user_path, local: true, method: :patch) do |f| %>

       <%= f.label :work_time, class: "label-#{yield(:class_text)}" %>
       <%= f.time_field :work_time, class: "form-control" %>
       
       <%= f.label :basic_time, class: "label-#{yield(:class_text)}" %>
       <%= f.time_field :basic_time, class: "form-control" %>
       
       <%= f.submit yield(:button_text),
         class: "btn btn-primary btn-block btn-#{ yield(:class_text)}, form_btn" %>
       
    <% end %>
    
  </div>
</div>