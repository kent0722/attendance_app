<% provide(:title, "All Users") %>
　

  <div class="col-md-10 col-md-offset-1">
    <h1>ユーザ一覧</h1>
    <%= will_paginate %>
    <table class="table table-condensed table-hover">
      <thead>
        <tr>
          <th><%= User.human_attribute_name :name %></th>
        </tr>
      </thead>
      
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, user %></td>
        </tr>
      <% end %>
    </table>
    <%= will_paginate %>
  </div>
